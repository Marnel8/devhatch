{
  "rules": {
    ".read": true,
    ".write": true,
    "applications": {
      ".indexOn": ["email", "studentId", "jobId"]
    },
    "students": {
      ".indexOn": ["ojtNumber", "performance/completion"]
    },
    "attendance": {
